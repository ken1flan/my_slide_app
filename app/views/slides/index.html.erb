<p id="notice"><%= notice %></p>

<h1>
  Listing Slides
  <%= link_to 'New Slide', new_slide_path, class: "btn btn-success" %>
</h1>

<div class="row">
  <% @slides.each do |slide| %>
    <div class="col-md-6">
      <%= render "summary", slide: slide, operation: true %>
    </div>
  <% end %>
</div>
<br>

